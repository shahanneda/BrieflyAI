{
  "manifest_version": 2,
  "name": "BriefAI",
  "description": "Summary",
  "version": "0.001",
  "icons": {
    "64": "icons/icon.png"
  },
  "permissions": ["contextMenus"],
  "background": {
    "scripts": [
      "background_script.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.mozilla.org/*"
      ],
      "js": [
        "content_script.js"
      ]
    }
  ],
  // "browser_action": {
  //   "default_icon": {
  //     "64": "icons/icon.png"
  //   },
  //   "default_popup": "browserAction/index.html",
  //   "default_title": "BriefAI"
  // },
  "page_action": {
    "default_icon": {
      "64": "icons/icon.png"
    },
    "default_popup": "pageAction/index.html",
    "default_title": "BriefAI"
  },
  "options_ui": {
    "page": "options/index.html"
  }
}