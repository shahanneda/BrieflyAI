{
  "manifest_version": 2,
  "name": "BriefAI",
  "description": "Summary creator.",
  "version": "0.001",
  "icons": {
    "64": "icons/icon.png"
  },
  "web_accessible_resources": ["summaryModal.html", "summaryModal.js", "summaryModal.css"],
  "permissions": ["contextMenus"],
  "background": {
    "scripts": [
      "background_script.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],

      "all_frames": true,
      "js": [
        "content_script.js"
      ]

    }
  ],

  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_title": "BriefAI Popup",
    "default_popup": "popup/browserPopup.html"
  }

  // "options_ui": {
  //   "page": "options/options.html"
  // }
}