{
  "manifest_version": 2,
  "name": "BriefAI",
  "description": "Summary creator.",
  "version": "0.001",
  "icons": {
    "64": "icons/icon.png"
  },
  "web_accessible_resources": ["summaryModal.html", "summaryModal.js"],
  "permissions": ["contextMenus"],
  "background": {
    "scripts": [
      "background_script.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],

      "all_frames": true,
      "js": [
        "content_script.js"
      ]

    }
  ],
  "page_action": {
    "default_icon": {
      "64": "icons/icon.png"
    },
    "default_popup": "pageAction/index.html",
    "default_title": "BriefAI"
  },
  "options_ui": {
    "page": "options/index.html"
  }
}